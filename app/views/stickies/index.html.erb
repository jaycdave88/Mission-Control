<div class="row">
  <h1 class="text-center">Stickies!</h1>
  <ul id="sticky-list" class="small-block-grid-3">
    <% @stickies.each do |sticky| %>
      <li class="sticky yellow"><%= link_to sticky.title, sticky_path(sticky), :'data-reveal-id' => "StickyModal"  %><p>raised by <%= sticky.user.name %></p></li>
    <% end %>
  </ul>
</div>

<div id="StickyModal" class="reveal-modal" data-reveal></div>

<div id="LoginModal" class="reveal-modal" data-reveal>
  <%= form_tag new_session_path, method: "post" do %>
    <%= label_tag :email %><br>
    <%= email_field_tag :email, params[:email] %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Log In", class: "button [tiny small large]" %>
  <% end %>
</div>

