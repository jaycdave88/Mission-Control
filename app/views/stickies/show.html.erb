  <div class="container row">
    <h1 class="heading text-center"><%= @sticky.title %></h1>
      <div class="center">
        <% if session[:current_user_id] == @sticky.user_id %>
          <h5 class="text-center"><%= link_to "Edit", edit_sticky_path %>
          <%= button_to "Delete", sticky_path, method: :delete, data: {confirm: "Whoa!"} %></h5>
        <% end %>
      </div>
      <div id="content-blocks">
        <% blocks = @sticky.content.split("`") %>
        <% blocks.each_with_index do |block, index| %>
            <% if index%2==0 %>
                <p><%=block%></p>
            <% else %>
                <pre><%=block%></pre>
            <% end %>
        <%end%>
      </div>
      <div>
        <h2>Help response: </h2>

        <ul id="helps" class="small-block-grid-3">
          <% @helps.each do |help| %>
            <li><%= link_to help.title, edit_sticky_help_path(@sticky, help) %></li>
          <% end %>
        </ul>
      </div>

      <%= button_to "Help", new_sticky_help_path(@sticky), method: "get", class: "button radius" %>
    </div>
